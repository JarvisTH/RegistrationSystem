<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jarvis.registrationsystem.dao.KeShiDao">

    <!--基本表-->
    <sql id="TABLE">
        ke_shi
    </sql>

    <sql id="FIELDS">
        name
    </sql>

    <sql id="ALL_FIELDS">
        id,name
    </sql>

    <!--添加-->
    <insert id="addKeShi" parameterType="com.jarvis.registrationsystem.pojo.KeShi">
        INSERT INTO
        <include refid="TABLE"/>
        <trim prefix="(" suffix=")">
            <include refid="FIELDS"/>
        </trim>
        VALUES
        <trim prefix="(" suffix=")">
            #{name}
        </trim>
    </insert>

    <!--删除-->
    <delete id="deleteKeShi" parameterType="INTEGER">
        DELETE FROM
        <include refid="TABLE"/>
        WHERE
        id=#{id}
    </delete>

    <!--更新-->
    <update id="updateTitle" parameterType="com.jarvis.registrationsystem.pojo.KeShi">
        UPDATE
        <include refid="TABLE"/>
        <set>
            <if test="name!=null">
                name=#{name,jdbcType=VARCHAR}
            </if>
        </set>
    </update>

    <!--查询列表-->
    <select id="getKeShis" resultType="com.jarvis.registrationsystem.pojo.KeShi">
        SELECT
        <include refid="ALL_FIELDS"/>
        FROM <include refid="TABLE"/>
    </select>

    <select id="getKeShiList" parameterType="INTEGER,STRING" resultType="com.jarvis.registrationsystem.pojo.KeShi">
        SELECT
        <include refid="ALL_FIELDS"/>
        FROM <include refid="TABLE"/>
        WHERE
        id=#{id} OR name=#{name}
    </select>

</mapper>